{
    "name": "oussema/hidebycountries",
    "description": "Hide Content Elements depends on the frontend user country",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "keywords": [
        "TYPO3",
        "extension",
        "hide",
        "countries"
    ],
    "authors": [
        {
            "name": "Oussema Harrabi",
            "homepage": "https://oussemaharrbi.tn",
            "role": "Developer"
        }
    ],
    "homepage": "https://extensions.typo3.org/extension/hidebycountries/",
    "support": {
        "issues": "https://github.com/xvarusx/Hide-By-Countries/issues",
        "source": "https://github.com/xvarusx/Hide-By-Countries"
    },
    "require": {
        "php": ">= 8.1 < 8.5",
        "typo3/cms-backend": "^12.1",
        "typo3/cms-core": "^12.1",
        "typo3/cms-extbase": "^12.1",
        "typo3/cms-fluid": "^12.1",
        "typo3/cms-frontend": "^12.1",
        "typo3/cms-install": "^12.1"
    },
    "require-dev": {
        "a9f/fractor-extension-installer": "^0.5.6",
        "a9f/typo3-fractor": "^0.5.6",
        "friendsofphp/php-cs-fixer": "^3.89",
        "phpstan/phpdoc-parser": "^2.3",
        "phpunit/phpunit": "^10.5",
        "ssch/typo3-rector": "^2.15",
        "typo3/coding-standards": "^0.8.0",
        "typo3/testing-framework": "^8.2"
    },
    "replace": {
        "typo3-ter/hidebycountries": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Oussema\\HideByCountries\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oussema\\HideByCountries\\Tests\\": "Tests"
        }
    },
    "config": {
        "allow-plugins": {
            "a9f/fractor-extension-installer": true,
            "sbuerk/typo3-cmscomposerinstallers-testingframework-bridge": true,
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        },
        "bin-dir": ".Build/bin",
        "lock": false,
        "sort-packages": true,
        "vendor-dir": ".Build/vendor"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "extension-key": "hidebycountries",
            "web-dir": ".Build/Web"
        }
    },
    "scripts": {
        "test":"Build/Scripts/runTests.sh -t 13 -p 8.3  -s composerInstallLowest",
        "post-autoload-dump": [
            "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
        ],
        "cs": "php ./.Build/bin/php-cs-fixer fix  --dry-run -v --config ./Build/php-cs-fixer/php-cs-fixer.php ./",
        "csfix": "php ./.Build/bin/php-cs-fixer fix  -v --config ./Build/php-cs-fixer/php-cs-fixer.php ./"
    }
}
